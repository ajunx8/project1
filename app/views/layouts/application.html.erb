<!DOCTYPE html>
<html>
  <head>
    <title>Project1</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <style>
    @import url('https://fonts.googleapis.com/css2?family=Sanchez:ital@0;1&family=VT323&display=swap');
    </style>
  </head>

  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <%= link_to 'Home', root_path, :class => 'nav-link' %>
            </li>
            |
            <% if @current_user.present? %>
              <li class="nav-item">
                <%= link_to 'All users', users_path, :class => 'nav-link' if @current_user.admin? %> 
              </li>
              <li class="nav-item">
                <%= link_to "Log out #{ @current_user.email }", login_path, :method => 'delete', :class => 'nav-link' %>
              </li>
              |
              <% else %>
              <li class="nav-item">
                <%= link_to 'Sign up', new_user_path, :class => 'nav-link' %>
              </li>
              |
              <li class="nav-item">
                <%= link_to 'Sign In', login_path, :class => 'nav-link' %>
              </li>
              |
            <% end   %>

            <li class="nav-item">
              <%= link_to 'Travel Log', user_path(@current_user), :class => 'nav-link' if @current_user.present? %>
            </li>

          </ul>
        </div>
      </nav>

      <%= yield %>

    </div>
  </body>
</html>

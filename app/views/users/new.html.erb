<h1>Sign up</h1>

<% if @user.errors.any? %>
    <ol>
        <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ol>
<% end %>

<%= form_for @user do |f| %>
    <div class="form-group">
        <%= f.label :email %> 
        <%= f.email_field :email %> 
    </div>

    <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <div class="form-group">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </div>
    
    <%= f.submit "Sign Up" %>
<% end %>
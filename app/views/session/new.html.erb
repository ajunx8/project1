<h1>Log In</h1>

<% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
<% end %>

<%= form_tag login_path do %>
    <div class="form-group">
        <%= label_tag :email %>
        <%= email_field_tag :email %>
    </div>

    <div class="form-group">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </div>

    <%= submit_tag "Sign In" %>
<% end %>
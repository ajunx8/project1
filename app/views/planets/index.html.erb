<h1>Planets INDEX</h1>

<div class="container">
    <div class="row">
        <div class="col-10">
            <ul>
                <% @planets.each do |planet| %>
                    <li>
                        <%= button_to planet.name, planet, :method => :get %>
                    </li>
                <% end %>
            </ul>
        </div>


        <div class="col-2">
            <p><%= button_to 'Discover Planet', new_planet_path, :method => 'get', :id => 'discover' %></p>
            <p><%= button_to 'Travel Log', user_path(@current_user), :method => 'get', :id => 'discover' %></p>
        </div>
    </div>
</div>